template(name='transactions_view')
    h2 Transactions
    hr
    table.table.table-striped.table-bordered.table-hover.table-condensed
        thead
            tr
                td Date
                td Transaction Type
                td Description
                td Value
                td Balance
                td Account Name
                td Account Number
        tbody
            {{#each transactionList}}
                    tr
                        td {{date}}
                        td {{transaction_type}}
                        td {{description}}
                        td {{value}}
                        td {{balance}}
                        td {{account_name}}
                        td {{account_number}}
            {{/each}}

