template(name='navigation_menu')
    .accordion#nav-menu
        .accordion-group.nav-group
            .accordion-heading.nav-gradient
              a.accordion-toggle.nav-import(
                                data-toggle='collapse', 
                                data-parent='#nav-menu', 
                                href='#import-data').nav-font
                | Import Financial Data
            #import-data.accordion-body.collapse.in
              .accordion-inner
                | Load a .csv file into the tool:
                button.btn.loadCsv Load CSV file
        .accordion-group.nav-group
            .accordion-heading.nav-gradient
              a.accordion-toggle.nav-transactions(
                                data-toggle='collapse', 
                                data-parent='#nav-menu', 
                                href='#transactions-view').nav-font
                | Transactions View
            #transactions-view.accordion-body.collapse
              .accordion-inner
                | Transactions summary
                | 1 millions transactions!
        .accordion-group.nav-group
            .accordion-heading.nav-gradient
              a.accordion-toggle.nav-graph(
                                data-toggle='collapse', 
                                data-parent='#nav-menu', 
                                href='#graph-view').nav-font
                | Graph View
            #graph-view.accordion-body.collapse
              .accordion-inner
                | Graphs list
